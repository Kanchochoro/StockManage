<div class="container-fluid">

<div class="col-6 mx-auto">
    <form method="post" action="/account/register">
    <div class="form-group">
    <label for="uname">User name</label>
    <input type="text" class="form-control" name="uname" id="uname" aria-describedby="emailHelp" placeholder="name">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> --}}
  </div>
  <div class="form-group">
    <label for="pnumber">Phone number</label>
    <input type="text" class="form-control" name="pnumber" id="pnumber" aria-describedby="emailHelp" placeholder="Enter your phone number..">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> --}}
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="text" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> --}}
  </div>
  <div class="form-group mt-2">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
  </div>
  <div class="form-group mt-2">
    <label for="cpassword">Confirm Password</label>
    <input type="cpassword" class="form-control" name="cpassword" id="cpassword" placeholder="Enter your Password again">
  </div>
  <div class="form-check mt-2">
    <input type="checkbox" class="form-check-input" name="check" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary form-control mt-2">Login</button>
  <h3 class="text-info text-center ">No account created yet?? Click Register</h3>
   <a href="/account/register" class="btn btn-success form-control">Register</a>
</form>
</div>
 {{#if error}}
<p class="text-danger text-center">{{error}}</p>
 {{/if}}
</div>